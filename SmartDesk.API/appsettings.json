{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=smartdesk.db"
  },
  "EmailSummarizer": {
    "Provider": "Ollama", //"OpenAI", // or "Ollama"
    "OpenAIApiKey": "<YOUR_KEY>",
    "OpenAIModel": "gpt-4",
    "OllamaEndpoint": "http://localhost:11434",
    "OllamaModel": "llama3.2:3b"
  },
  "Smtp": {
    "Host": "",
    "Port": 465,
    "UseSsl": true,
    "From": "your.email",
    "To": "some.email",
    "Username": "your.username",
    "Password": "your.password"
  },
  "Reminder": {
    "PollIntervalSeconds": 60,
    "LeadTimeMinutes": 15
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
