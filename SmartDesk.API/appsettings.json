{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=smartdesk.db"
  },
  "EmailSummarizer": {
    "Provider": "Ollama", //"OpenAI", // or "Ollama"
    "OpenAIApiKey": "<YOUR_KEY>",
    "OpenAIModel": "gpt-4",
    "OllamaEndpoint": "http://localhost:11434",
    "OllamaModel": "llama3.2:3b"
  },
  "Smtp": {
    "Host": "smtp.some.server.com",
    "Port": 465,
    "UseSsl": true,
    "From": "your.email",
    "To": "some.email",
    "Username": "user.name",
    "Password": "password"
  },
  "Calendar": {
    "Provider": "Google", // or "Microsoft"
    "GoogleServiceAccountJsonPath": "/secrets/google-sa.json",
    "MicrosoftTenantId": "YOUR_TENANT_ID",
    "MicrosoftClientId": "YOUR_CLIENT_ID",
    "MicrosoftClientSecret": "YOUR_CLIENT_SECRET"
  },
  "Reminder": {
    "PollIntervalSeconds": 60,
    "LeadTimeMinutes": 15
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
